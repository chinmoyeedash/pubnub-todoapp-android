<resources xmlns:android="http://schemas.android.com/apk/res/android">
 <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
  -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
   <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
     <style name="darkbtn" parent="@style/AppTheme">
        <item name="android:background">@color/textblue</item>
          <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
     <style name="textviewstyle" parent="@style/AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textblue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
     <style name="spinnerstyle" parent="@android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textblue</item>
    	<item name="android:textStyle">bold</item>
    </style>
    <style name="listviewstyle" parent="@style/AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/textblue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>
